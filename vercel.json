{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "source": "/logo.svg",
      "destination": "/logo.svg",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "Content-Type": "image/svg+xml"
      }
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 